generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id     String  @id @default(uuid())
  email  String  @unique
  movies Movie[]

  @@map("users")
}

model Movie {
  id      String @id
  User    User?  @relation(fields: [userId], references: [id])
  userId  String @map("user_id")

  @@map("movies")
}
